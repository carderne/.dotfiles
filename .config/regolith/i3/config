### --- Main config --- ###
# This defines which key super maps to on your keyboard.
# Alt key is Mod1, and Windows key is Mod4
set $mod Mod4
set $alt Mod1
# i3xrocks config file
set $i3xrocks_config /home/chris/.config/regolith/i3xrocks/config
# compton config file
set $compton_config /home/chris/.config/regolith/compton/config
# path to terminal. Override this to specify a custom terminal
set $terminal_path /usr/bin/gnome-terminal -e tmux


### --- Rofi --- ###
# rofi app and window launchers
set $rofiTheme /home/chris/.config/regolith/rofi/regolith-theme.rasi
bindsym $mod+space exec rofi -show drun -theme $rofiTheme
bindsym $mod+Shift+space exec rofi -show run -theme $rofiTheme
bindsym $mod+Ctrl+space exec rofi -show window -theme $rofiTheme
bindsym $mod+s exec xdg-open "$(rg --files --follow | rofi -threads 0 -width 100 -dmenu -i -p 'find' -theme $rofiTheme)"


### --- Main shortcuts --- ###
# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# Toggle between split and tabbed layout
bindsym $mod+x layout toggle tabbed split

hide_edge_borders smart

# start a terminal
bindsym $mod+Return exec $terminal_path

# start a web browser
bindsym $mod+Shift+Return exec /usr/bin/firefox

# open a Files window
bindsym $mod+Ctrl+Return exec nautilus --new-window /home/chris/Temp/

# Take a screenshot
bindsym $mod+p --release exec /home/chris/.config/regolith/scripts/screenshot.sh

# Switch audio output
bindsym $mod+a exec /home/chris/.config/regolith/scripts/switch-audio.sh internal
bindsym $mod+Shift+a exec /home/chris/.config/regolith/scripts/switch-audio.sh wifi

# kill focused window
bindsym $mod+q kill

# reload the configuration file
bindsym $mod+Shift+c reload

# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# Logout of session
bindsym $mod+Shift+e exec /usr/bin/gnome-session-quit --logout

# Reboot computer
bindsym $mod+Shift+b exec /usr/bin/gnome-session-quit --reboot

# Power off computer
bindsym $mod+Shift+p exec /usr/bin/gnome-session-quit --power-off

# lock the screen
bindsym $mod+Escape exec gnome-screensaver-command --lock

# put the system to sleep
bindsym $mod+Shift+s exec systemctl suspend

# shortcuts for common system configuration tasks
bindsym $mod+c exec gnome-control-center
bindsym $mod+w exec gnome-control-center wifi
bindsym $mod+b exec gnome-control-center bluetooth
#bindsym $mod+d exec gnome-control-center display
#bindsym $mod+n exec gnome-control-center network
#bindsym $mod+p exec gnome-control-center power
#bindsym $mod+s exec gnome-control-center sound


### --- Navigation --- ###
# change focus
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move windows in workspaces
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# toggle split orientation
bindsym $mod+BackSpace split toggle

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change gaps interactively
bindsym $mod+minus gaps inner current minus 6
bindsym $mod+plus gaps inner current plus 6

# toggle tiling / floating
bindsym $mod+Shift+f floating toggle

# change focus between tiling / floating windows
bindsym $mod+Shift+t focus mode_toggle

# toggle tabbed mode
bindsym $mod+t layout toggle tabbed splith splitv


### --- Workspaces --- ###
# These are the labels which define each i3 workspace.
set $ws1 1: 1
set $ws2 2: 2
set $ws3 3: 3
set $ws4 4: 4
set $ws5 5: 5
set $ws6 6: 6
set $ws7 7: 7
set $ws8 8
set $ws9 9

# move to workspace
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9

# cycle across workspaces
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9

# move focused container to workspace, move to workspace
bindsym $mod+$alt+1 move container to workspace $ws1; workspace $ws1; workspace $ws1
bindsym $mod+$alt+2 move container to workspace $ws2; workspace $ws2; workspace $ws2
bindsym $mod+$alt+3 move container to workspace $ws3; workspace $ws3; workspace $ws3
bindsym $mod+$alt+4 move container to workspace $ws4; workspace $ws4; workspace $ws4
bindsym $mod+$alt+5 move container to workspace $ws5; workspace $ws5; workspace $ws5
bindsym $mod+$alt+6 move container to workspace $ws6; workspace $ws6; workspace $ws6
bindsym $mod+$alt+7 move container to workspace $ws7; workspace $ws7; workspace $ws7
bindsym $mod+$alt+8 move container to workspace $ws8; workspace $ws8; workspace $ws8
bindsym $mod+$alt+9 move container to workspace $ws9; workspace $ws9; workspace $ws9


### --- Resize --- ###
# resize window (you can also use the mouse for that)
mode "Resize Mode" {
# These bindings trigger as soon as you enter the resize mode
    bindsym Left resize shrink width 6 px or 6 ppt
        bindsym Down resize grow height 6 px or 6 ppt
        bindsym Up resize shrink height 6 px or 6 ppt
        bindsym Right resize grow width 6 px or 6 ppt

        bindsym Shift+Left resize shrink width 12 px or 12 ppt
        bindsym Shift+Down resize grow height 12 px or 12 ppt
        bindsym Shift+Up resize shrink height 12 px or 12 ppt
        bindsym Shift+Right resize grow width 12 px or 12 ppt

        bindsym h resize shrink width 6 px or 6 ppt
        bindsym k resize grow height 6 px or 6 ppt
        bindsym j resize shrink height 6 px or 6 ppt
        bindsym l resize grow width 6 px or 6 ppt

        bindsym Shift+h resize shrink width 12 px or 12 ppt
        bindsym Shift+k resize grow height 12 px or 12 ppt
        bindsym Shift+j resize shrink height 12 px or 12 ppt
        bindsym Shift+l resize grow width 12 px or 12 ppt

# back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "Resize Mode"


### --- Aesthetics --- ###
# Disable titlebar
default_border none
default_floating_border none

# Gaps (i3-gaps)
gaps inner 0
gaps outer 0

# Only enable gaps on a workspace when there is at least one container
smart_gaps on

set $focused.color.border "#002b36"
set $focused.color.background "#586e75"
set $focused.color.text "#fdf6e3"
set $focused.color.indicator "#268bd2"

set $focused_inactive.color.border "#002b36"
set $focused_inactive.color.background "#073642"
set $focused_inactive.color.text "#839496"
set $focused_inactive.color.indicator "#073642"

set $unfocused.color.border "#002b36"
set $unfocused.color.background "#073642"
set $unfocused.color.text "#839496"
set $unfocused.color.indicator "#073642"

set $urgent.color.border "#002b36"
set $urgent.color.background "#dc322f"
set $urgent.color.text "#fdf6e3"
set $urgent.color.indicator "#002b36"

# Window Border color
# class                 border                             background                         text                               indicator
client.focused          $focused.color.border              $focused.color.background          $focused.color.text                $focused.color.indicator
client.focused_inactive $focused_inactive.color.border     $focused_inactive.color.background $focused_inactive.color.text       $focused_inactive.color.indicator
client.unfocused        $unfocused.color.border            $unfocused.color.background        $unfocused.color.text              $unfocused.color.indicator
client.urgent           $urgent.color.border               $urgent.color.background           $urgent.color.text                 $urgent.color.indicator

# Enable popup during fullscreen
popup_during_fullscreen smart

# window focus follows your mouse movements as the mouse crosses window borders
focus_follows_mouse no

set $i3-wm.bar.background.color "#002b36"
set $i3-wm.bar.statusline.color "#93a1a1"
set $i3-wm.bar.separator.color "#268bd2"

set $i3-wm.bar.workspace.focused.border.color "#073642"
set $i3-wm.bar.workspace.focused.background.color "#073642"
set $i3-wm.bar.workspace.focused.text.color "#eee8d5"

set $i3-wm.bar.workspace.active.border.color "#073642"
set $i3-wm.bar.workspace.active.background.color "#073642"
set $i3-wm.bar.workspace.active.text.color "#586e75"

set $i3-wm.bar.workspace.inactive.border.color "#002b36"
set $i3-wm.bar.workspace.inactive.background.color "#002b36"
set $i3-wm.bar.workspace.inactive.text.color "#586e75"

set $i3-wm.bar.workspace.urgent.border.color "#dc322f"
set $i3-wm.bar.workspace.urgent.background.color "#dc322f"
set $i3-wm.bar.workspace.urgent.text.color "#fdf6e3"


### --- Bar --- ###
bar {
    font "pango:Source Code Pro Medium 13, FontAwesome 13"
        separator_symbol " "
        status_command i3xrocks -c $i3xrocks_config
        tray_output none
        strip_workspace_numbers yes

        colors {
            background $i3-wm.bar.background.color
                statusline $i3-wm.bar.statusline.color
                separator  $i3-wm.bar.separator.color

#                        BORDER  BACKGROUND TEXT
                focused_workspace  $i3-wm.bar.workspace.focused.border.color      $i3-wm.bar.workspace.focused.background.color   $i3-wm.bar.workspace.focused.text.color
                active_workspace   $i3-wm.bar.workspace.active.border.color       $i3-wm.bar.workspace.active.background.color    $i3-wm.bar.workspace.active.text.color
                inactive_workspace $i3-wm.bar.workspace.inactive.border.color     $i3-wm.bar.workspace.inactive.background.color  $i3-wm.bar.workspace.inactive.text.color
                urgent_workspace   $i3-wm.bar.workspace.urgent.border.color       $i3-wm.bar.workspace.urgent.background.color    $i3-wm.bar.workspace.urgent.text.color
        }
}


### --- Startup --- ###
# Start the composite manager
exec --no-startup-id compton -f --config $compton_config

# alternating-layout
exec --no-startup-id /usr/bin/python3 /home/chris/.config/regolith/i3-alternating-layout/alternating_layouts.py

# Refresh wallpaper on screen resolution change
exec --no-startup-id /usr/bin/xeventbind resolution /usr/bin/wallpaper-refresh

# Redshift
exec_always --no-startup-id /usr/bin/redshift -l 41:2 -t 6500:3500
