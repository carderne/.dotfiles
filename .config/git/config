[user]
	name = Chris Arderne

[include]
  path = ~/.config/git/work
[includeIf "gitdir:~/Documents/"]
  path = ~/.config/git/personal
[includeIf "gitdir:~/Work/"]
  path = ~/.config/git/other

[core]
	editor = nvim
	excludesfile = ~/.config/git/ignore

[diff]
	tool = vimdiff
[merge]
  tool = vimdiff
[mergetool "vimdiff"]
  path = nvim

[alias]
  ll = log --decorate --all --date=format-local:'%Y-%m-%d %H:%M:%S' --pretty=format:'%C(cyan)%h%Creset %C(black bold)%ad%Creset%C(auto)%d %s'
	lo = log --all --decorate --graph --oneline
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	pushfwl = push --force-with-lease
  co = checkout
  s = status
  amend = commit --amend
  dc = diff --cached
  last = log -1 HEAD
  unstage = reset HEAD --
  ho = config --unset-all core.hooksPath

[init]
	defaultBranch = main
[push]
	autoSetupRemote = true
